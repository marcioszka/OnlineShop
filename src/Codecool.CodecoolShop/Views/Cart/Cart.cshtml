@model Codecool.CodecoolShop.Models.Order

@if (Model == null)
{
    <h4>There is no item in your shopping cart.</h4>
    <!-- <h4>Model.Message</h4>-->
}
else
{
<h4>Order no. @Model.Id</h4>
<form action="Quantity" method="post">
    <table>
        <tr>
            <th>No.</th>
            <th>Product</th>
            <th>Price per product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
                @{
                    int counter = 1;
                    string currency = "";
                }
            @foreach (var lineItem in Model.Items)
        {
            <tr>
                <td>@counter.</td>
                <td>@lineItem.Name</td>
                <td>@lineItem.DefaultPrice @lineItem.Currency</td>
            
                <td>
                    <input type="hidden" name="id" value="@lineItem.Id">
                    <input type="text" name="quantity" value="@lineItem.Quantity">
                    <input type="submit" value="Update">
                            </td>
                        @{
                            string quantity = (@lineItem.Quantity).ToString(); 
                        }
                                       <!-- <td>@Html.TextBox("Quantity", quantity, new { 
                            @Id = @lineItem.Id, @Value = @lineItem.Quantity })</td> -->
                    @{
                        decimal totalprice = lineItem.Quantity * lineItem.DefaultPrice;
                        counter++;
                        currency = @lineItem.Currency;
                    }
                        <td>@totalprice @lineItem.Currency</td>
            </tr>
        }   
        <tr>
            <td colspan="4"><strong>Total price: </strong></td>
                <td>@Model.CountSum() @currency</td>
        </tr>
    </table>
</form>
       }